{% extends 'base.html.twig' %}

{% block title %}Localisation{% endblock %}

{% block body %}
    <h1>Localisation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ localisation.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ localisation.City }}</td>
            </tr>
            <tr>
                <th>CountryCode</th>
                <td>{{ localisation.CountryCode }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ localisation.Latitude }}</td>
            </tr>
            <tr>
                <th>Longtitude</th>
                <td>{{ localisation.Longtitude }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_LOCALISATION_INDEX') %}
        <a href="{{ path('app_localisation_index') }}">back to list</a>
    {% endif %}

    {% if is_granted('ROLE_LOCALISATION_EDIT') %}
        <a href="{{ path('app_localisation_edit', {'id': localisation.id}) }}">edit</a>
    {% endif %}

    {{ include('localisation/_delete_form.html.twig') }}
{% endblock %}
